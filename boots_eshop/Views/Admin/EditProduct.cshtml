@model BootEshop.ViewModels.EditProductViewModel
@using System.Text.Json
@using Mysqlx.Resultset

@{
    ViewData["Title"] = "Upravit produkt";
}

@section Scripts
{
    <script>const colorOptions = `
@foreach (var c in Model.Colors)
{
    <option value="@c.Value">@c.Text</option>
}
`;

const sizeOptions = `
@foreach (var s in Model.Sizes)
{
    <option value="@s.Value">@s.Text</option>
}
`;</script>
    <script src="~/js/admin/product.js" defer="defer"></script>
}
@section Styles
{
    <link rel="stylesheet" href="~/css/admin/product.css"/>
}

<h2 class="mb-4">Upravit produkt</h2>

<form asp-action="EditProduct"
      method="post"
      enctype="multipart/form-data"
      class="row g-3">

    <input type="hidden" asp-for="Id" />

    <!-- Basic info -->
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Název</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="StockPrice" class="form-label">Nákupní cena</label>
        <input asp-for="StockPrice" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Prodejní cena</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="SalePrice" class="form-label">Akční cena</label>
        <input asp-for="SalePrice" class="form-control" />
    </div>

    <div class="col-12">
        <label asp-for="ShortDescription" class="form-label">Krátký popis</label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>

    <div class="col-12">
        <label asp-for="LongDescription" class="form-label">Dlouhý popis</label>
        <textarea asp-for="LongDescription" class="form-control" rows="4"></textarea>
    </div>

    <hr class="my-4" />

    <!-- Category / Manufacturer -->
    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Kategorie</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
    </div>

    <div class="col-md-6">
        <label asp-for="ManufacturerId" class="form-label">Výrobce</label>
        <select asp-for="ManufacturerId" asp-items="Model.Manufacturers" class="form-select"></select>
    </div>
    
    

    <!-- Images -->
    <div class="col-12">
        <label class="form-label">Obrázky produktu</label>
        <input type="file"
               id="imageInput"
               name="Images"
               class="form-control"
               multiple
               accept="image/*" />

        <div class="form-text">
            První obrázek je hlavní. Přetáhnutím změníte pořadí.
        </div>

        <div id="imageList" class="row mt-3 g-3"
             data-existing='@Html.Raw(JsonSerializer.Serialize(Model.ExistingImages))'>
        </div>
        <div id="imageOrderInputs"></div>
        <!-- Hidden inputs for existing images -->
        <div id="existingImagesInputs"></div>
    </div>
    
    
    <table class="table">
        <thead>
        <tr>
            <th>Color</th>
            <th>Size</th>
            <th>Qty</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody id="stockRows">
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <input type="hidden" name="Rows[@i].Id" value="@Model.Rows[i].Id" />

                <td>
                    <select name="Rows[@i].ProductColorId"
                            class="form-select">
                        @foreach (var c in Model.Colors)
                        {
                            <option value="@c.Value"
                                    selected="@(c.Value == Model.Rows[i].ProductColorId.ToString())">
                                @c.Text
                            </option>
                        }
                    </select>
                </td>

                <td>
                    <select name="Rows[@i].ProductSizeId"
                            class="form-select">
                        @foreach (var s in Model.Sizes)
                        {
                            <option value="@s.Value"
                                    selected="@(s.Value == Model.Rows[i].ProductSizeId.ToString())">
                                @s.Text
                            </option>
                        }
                    </select>
                </td>

                <td>
                    <input name="Rows[@i].Quantity"
                           type="number"
                           min="0"
                           value="@Model.Rows[i].Quantity"
                           class="form-control" />
                </td>

                <td class="text-center">
                    <button type="button"
                            class="btn btn-danger"
                            onclick="removeRow(this)">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="button"
            class="btn btn-secondary"
            onclick="addRow()">
        Add row
    </button>

    <div class="col-12 mt-4">
        <button type="submit" class="btn btn-primary">Uložit produkt</button>
        <a asp-action="ProductOverview" class="btn btn-outline-secondary ms-2">Zrušit</a>
    </div>
</form>
